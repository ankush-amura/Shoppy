<%= form_for :sales , url:sales_newShop_url  do |f| %>
<fieldset>
  <legend>New Shop Desk</legend>
<p>
  <%= f.label :name %><br>
  <%= text_field_tag :name%>
</p>

<p>
  <%= f.label "city:" %><br><br>
  <%= select_tag :city ,options_for_select(@city_names)%>
</p>

<p>
  <%= f.label :area %><br><br>
  <%= select_tag :area,options_for_select(@area_names)%>
</p>

<p>
  <%= f.label "category:" %><br><br>
  <%= select_tag :category, options_for_select(@category_names) %>
</p>

<p>
  <%= f.label "Sub category:" %><br><br>
  <%= select_tag :subcategory, options_for_select(@sub_category_names) %>
</p>
<p>
  <%= hidden_field_tag :id, current_user.id %>
</p>

<p>
  <br>
  <br>
  <%= f.submit "Create New Shops" %>
  <br>
</p>

</fieldset>
<% end %>
